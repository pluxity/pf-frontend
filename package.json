{
  "name": "pf-dev",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest run --project=ui",
    "test:api": "vitest run --project=api",
    "test:map": "vitest run --project=map",
    "test:three": "vitest run --project=three",
    "test:services": "vitest run --project=services",
    "test:cctv": "vitest run --project=cctv",
    "test:coverage": "vitest run --coverage",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "clean": "turbo run clean && rimraf node_modules",
    "gen": "turbo gen",
    "gen:app": "turbo gen app",
    "gen:admin": "turbo gen admin",
    "deploy:local": "bash scripts/deploy-local.sh",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "changeset": "changeset",
    "bump": "changeset version",
    "tag": "changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "jsdom": "catalog:",
    "vitest": "catalog:",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
