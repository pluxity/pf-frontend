# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON
[*.{js,cjs,mjs,ts,tsx,jsx,json}]
indent_style = space
indent_size = 2

# CSS, SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# HTML, XML
[*.{html,xml,hbs}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Windows batch files (keep CRLF)
[*.{bat,cmd}]
end_of_line = crlf
