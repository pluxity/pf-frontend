{
  "name": "@pf-dev/{{ name }}",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port {{ port }}",
    "dev:staging": "vite --mode staging --port {{ port }}",
    "build": "tsc && vite build",
    {{#if includeMap}}
    "build:staging": "tsc && vite build --mode staging && node scripts/post-build.js",
    {{else}}
    "build:staging": "tsc && vite build --mode staging",
    {{/if}}
    "build:production": "tsc && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-router-dom": "catalog:",
    "zustand": "catalog:",
    "react-hook-form": "catalog:",
    "zod": "catalog:",
    "@hookform/resolvers": "catalog:",
    "@pf-dev/api": "workspace:*",
    "@pf-dev/ui": "workspace:*"{{#if useAuth}},
    "@pf-dev/services": "workspace:*"{{/if}}{{#if includeCctv}},
    "@pf-dev/cctv": "workspace:*"{{/if}}{{#if includeMap}},
    "@pf-dev/map": "workspace:*",
    "cesium": "^1.121.0"{{/if}}{{#if includeThree}},
    "@pf-dev/three": "workspace:*"{{/if}}
  },
  "devDependencies": {
    "@pf-dev/eslint-config": "workspace:*",
    "@pf-dev/typescript-config": "workspace:*",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "tailwindcss": "catalog:",
    "@tailwindcss/vite": "catalog:",
    "eslint": "catalog:",
    "rimraf": "^6.0.1"{{#if includeMap}},
    "vite-plugin-cesium": "^1.2.23"{{/if}}
  }
}
